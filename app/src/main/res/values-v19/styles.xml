<resources>

    <!-- v19 application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:windowBackground">@color/primary_app_color</item>
        <item name="android:actionBarStyle">@style/KFActionBar</item>
        <item name="android:actionMenuTextColor">@color/primary_light</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="KFActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:background">@color/primary_app_color</item>
        <item name="android:titleTextStyle">@style/KFActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="KFActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/contrast_app_color</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
    </style>

</resources>
